<?xml version="1.0" encoding="UTF-8"?>
<taglib version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd">
	<tlib-version>1.0</tlib-version>
	<short-name>xfy-tags</short-name>
	<uri>http://tags.xuanfeiyang.com/tags</uri>

	<tag>
		<name>power</name>
		<tag-class>com.xuanfeiyang.erp.web.tag.PowerTag</tag-class>
		<body-content>scriptless</body-content>
		<attribute>
			<name>code</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<name>type</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<type>java.lang.String</type>
		</attribute>
	</tag>

	<function>
		<name>getConfig</name>
		<function-class>com.xuanfeiyang.erp.App</function-class>
		<function-signature>java.lang.String getConfig(java.lang.String)</function-signature>
	</function>
	
	<function>
		<name>goodsImagePath</name>
		<function-class>com.xuanfeiyang.erp.util.AppUtil</function-class>
		<function-signature>java.lang.String goodsImagePath(java.lang.String, int)</function-signature>
	</function>
	
	<function>
		<name>goodsImageThumbnailPath</name>
		<function-class>com.xuanfeiyang.erp.util.AppUtil</function-class>
		<function-signature>java.lang.String goodsImageThumbnailPath(java.lang.String, int, java.lang.String)</function-signature>
	</function>
</taglib>
