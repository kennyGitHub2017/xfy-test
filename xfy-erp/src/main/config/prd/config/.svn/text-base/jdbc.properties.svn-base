# datasource properties
jdbc.driverClassName=oracle.jdbc.driver.OracleDriver
jdbc.db.url=jdbc:oracle:thin:@192.168.1.18:1521:orcl
jdbc.db.username=xfy
jdbc.db.password=xfy456

# -- bonecp config start 以下配置专为数据连接池 bonecp 使用  --#

# 检查数据库连接池中空闲连接的间隔时间，单位是分，默认值：240，如果要取消则设置为0
jdbc.db.bonecp.idleConnectionTestPeriodInMinutes=0
# 连接池中未使用的链接最大存活时间，单位是分，默认值：60，如果要永远存活设置为0
jdbc.db.bonecp.idleMaxAgeInMinutes=60
# 每个分区最大的连接数
jdbc.db.bonecp.maxConnectionsPerPartition=16
# 每个分区最小的连接数
jdbc.db.bonecp.minConnectionsPerPartition=1
# 分区数 ，默认值2，最小1，推荐3-4，视应用而定
jdbc.db.bonecp.partitionCount=4
# 当连接池中的连接耗尽的时候 BoneCP一次同时获取的连接数，每次去拿数据库连接的时候一次性要拿几个,默认值：2
jdbc.db.bonecp.acquireIncrement=2
# 缓存prepared statements的大小，默认值：0
jdbc.db.bonecp.statementsCacheSize=0
# 每个分区释放链接助理进程的数量，默认值：3，除非你的一个数据库连接的时间内做了很多工作，不然过多的助理进程会影响你的性能
jdbc.db.bonecp.releaseHelperThreads=3

# -- bonecp config end --#