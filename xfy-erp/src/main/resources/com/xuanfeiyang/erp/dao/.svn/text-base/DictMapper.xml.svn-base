<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanfeiyang.erp.dao.DictDao">

	<select id="findByType" resultType="Dict">
		select * from dict where type = #{type} order by code
	</select>
	
	<select id="load" resultType="Dict">
		select * from dict where type = #{type} and code = #{code}
	</select>
	
	<delete id="delete">
		delete from dict where type = #{type} and code = #{code}
	</delete>

	<insert id="save">
		insert into dict (type, code, name) values (#{type}, #{code}, #{name})
	</insert>

	<update id="update">
		update dict set name = #{name} where type = #{type} and code = #{code}
	</update>
	
	<select id="findByTable" resultType="Dict">
		select id as code,TYPENAME as name from profile.${tableName}
	</select>
</mapper>