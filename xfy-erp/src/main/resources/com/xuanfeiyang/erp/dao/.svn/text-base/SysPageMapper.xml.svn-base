<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanfeiyang.erp.dao.SysPageDao">
	<resultMap id="BaseResultMap" type="SysPage">
		<id column="CODE" property="code" jdbcType="VARCHAR" />
		<result column="NAME" property="name" jdbcType="VARCHAR" />
		<result column="URL" property="url" jdbcType="VARCHAR" />
		<result column="MODULE_CODE" property="moduleCode" jdbcType="VARCHAR" />
		
		<collection property="functions" column="CODE" ofType="SysPage"
			select="com.xuanfeiyang.erp.dao.SysFunctionDao.findByPageCode">
		</collection>
	</resultMap>
	<sql id="Base_Column_List">
		CODE, NAME, URL, MODULE_CODE, SORT, SYS_CODE
	</sql>
	
	<select id="load" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from SYS_PAGES
		where CODE = #{code,jdbcType=VARCHAR}
	</select>
	
	<select id="findByModuleCode" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from SYS_PAGES
		where MODULE_CODE = #{moduleCode,jdbcType=VARCHAR}
		order by SORT
	</select>
	
	<delete id="delete" parameterType="java.lang.String">
		delete from SYS_PAGES
		where CODE = #{code,jdbcType=VARCHAR}
	</delete>
	
	<insert id="insert" parameterType="SysPage">
		insert into SYS_PAGES (CODE, NAME, URL,
		MODULE_CODE,SORT,SYS_CODE)
		values (#{code,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR},
		#{url,jdbcType=VARCHAR},#{moduleCode,jdbcType=VARCHAR},
		#{sort,jdbcType=INTEGER},#{sysCode,jdbcType=VARCHAR})
	</insert>

	<update id="update" parameterType="SysPage">
		update SYS_PAGES
		<set>
			<if test="name != null">
				NAME = #{name,jdbcType=VARCHAR},
			</if>
			<if test="url != null">
				URL = #{url,jdbcType=VARCHAR},
			</if>
			<if test="moduleCode != null">
				MODULE_CODE = #{moduleCode,jdbcType=VARCHAR},
			</if>
			<if test="sort != null">
				SORT = #{sort,jdbcType=INTEGER},
			</if>
			<if test="sysCode != null">
				SYS_CODE = #{sysCode,jdbcType=VARCHAR},
			</if>
		</set>
		where CODE = #{code,jdbcType=VARCHAR}
	</update>

</mapper>