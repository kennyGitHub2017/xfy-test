<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanfeiyang.erp.dao.SysFunctionDao">
	<resultMap id="BaseResultMap" type="SysFunction">
		<id column="CODE" property="code" jdbcType="VARCHAR" />
		<result column="NAME" property="name" jdbcType="VARCHAR" />
		<result column="PAGE_CODE" property="pageCode" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_List">
		CODE, NAME, PAGE_CODE
	</sql>
	
	<select id="load" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from SYS_FUNCTIONS
		where CODE = #{code,jdbcType=VARCHAR}
	</select>
	
	<select id="findByPageCode" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from SYS_FUNCTIONS
		where PAGE_CODE = #{pageCode,jdbcType=VARCHAR}
	</select>
	
	<delete id="delete" parameterType="java.lang.String">
		delete from SYS_FUNCTIONS
		where CODE = #{code,jdbcType=VARCHAR}
	</delete>
	
	<insert id="insert" parameterType="SysFunction">
		insert into SYS_FUNCTIONS (CODE, NAME, PAGE_CODE
		)
		values (#{code,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR},
		#{pageCode,jdbcType=VARCHAR}
		)
	</insert>
	
	<update id="update" parameterType="SysFunction">
		update SYS_FUNCTIONS
		<set>
			<if test="name != null">
				NAME = #{name,jdbcType=VARCHAR},
			</if>
			<if test="pageCode != null">
				PAGE_CODE = #{pageCode,jdbcType=VARCHAR},
			</if>
		</set>
		where CODE = #{code,jdbcType=VARCHAR}
	</update>
	
</mapper>