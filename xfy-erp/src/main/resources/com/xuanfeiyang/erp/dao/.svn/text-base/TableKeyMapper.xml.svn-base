<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanfeiyang.erp.dao.TableKeyDao">
	<select id="nextSerialNumber" resultType="java.lang.Integer">
		select max(key_value) from table_key where table_name=#{tableName}
	</select>
	<update id="updateSerialNumber">
		update table_key set key_value=(select max(key_value)+1 from table_key where table_name=#{tableName})  where table_name=#{tableName}
	</update>
	<delete id="deleteAll">
		delete from table_key
	</delete>
	<insert id="insert">
		insert into table_key (TABLE_NAME,KEY_VALUE) values (#{tableName,jdbcType=VARCHAR},#{serialNumber,jdbcType=DECIMAL})
	</insert>
</mapper>