<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanfeiyang.erp.dao.SellerFeeWithHoldDao">
	<delete id="deletedByOrderId">
		delete from SELLERFEE_WITHHOLD where order_id=#{orderId,jdbcType=DECIMAL}
	</delete>
	<insert id="insert">
		insert into SELLERFEE_WITHHOLD (SELLER_ID,ORDER_ID,SELLER_FEE,WITHHOLD_FEE,CREATED_TIME) values (#{param.sellerId,jdbcType=DECIMAL},#{param.orderId,jdbcType=DECIMAL},
		#{param.sellerFee,jdbcType=DECIMAL},#{param.withholdFee,jdbcType=DECIMAL},#{param.createdTime,jdbcType=TIMESTAMP}
		)
	</insert>
	<select id="getByOrderId" resultType="SellerFeeWithHold">
		select * from SELLERFEE_WITHHOLD where order_id=#{orderId,jdbcType=DECIMAL}
	</select>
	<select id="getWitholdFeeTotalBySeller" resultType="DECIMAL">
		select SUM(WITHHOLD_FEE) from  XFY.SELLERFEE_WITHHOLD
		where SELLER_ID=#{sellerId,jdbcType=DECIMAL}
	</select>
</mapper>