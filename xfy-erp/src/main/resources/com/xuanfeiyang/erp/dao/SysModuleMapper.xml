<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuanfeiyang.erp.dao.SysModuleDao">
	<resultMap id="BaseResultMap" type="SysModule">
		<id column="CODE" property="code" jdbcType="VARCHAR" />
		<result column="NAME" property="name" jdbcType="VARCHAR" />
		<result column="URL" property="url" jdbcType="VARCHAR" />
	    <result column="SORT" property="sort" jdbcType="INTEGER"/>
		
		<collection property="pages" column="CODE" ofType="SysPage"
			select="com.xuanfeiyang.erp.dao.SysPageDao.findByModuleCode">
		</collection>
	</resultMap>
	
	<sql id="Base_Column_List">
		CODE, NAME, URL, SORT
	</sql>
	
	<select id="load" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from SYS_MODULES
		where CODE = #{code,jdbcType=VARCHAR}
	</select>
	
	<select id="find" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from SYS_MODULES
		order by SORT
	</select>
	
	<delete id="delete" parameterType="java.lang.String">
		delete from SYS_MODULES
		where CODE = #{code,jdbcType=VARCHAR}
	</delete>
	
	<insert id="insert" parameterType="SysModule">
		insert into SYS_MODULES (CODE, NAME, URL, SORT
		)
		values (#{code,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR},
		#{url,jdbcType=VARCHAR},#{sort,jdbcType=INTEGER}
		)
	</insert>

	<update id="update" parameterType="SysModule">
		update SYS_MODULES
		<set>
			<if test="name != null">
				NAME = #{name,jdbcType=VARCHAR},
			</if>
			<if test="url != null">
				URL = #{url,jdbcType=VARCHAR},
			</if>
		    <if test="sort != null">
				SORT = #{sort,jdbcType=INTEGER}
			</if>  
		</set>
		where CODE = #{code,jdbcType=VARCHAR}
	</update>
	
</mapper>